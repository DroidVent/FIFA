<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
   >

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_team"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

<!--
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_position"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:src="@mipmap/ico" />
-->

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_position"
        android:text="Liverpool"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="105dp"
        android:layout_alignParentRight="true"
        android:text="" />

    <TextView
        android:id="@+id/tv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_alignBottom="@+id/tv_played"
        android:layout_alignParentRight="true"
        android:text="" />

    <TextView
        android:id="@+id/tv_lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_alignBottom="@+id/tv_played"
        android:layout_alignParentRight="true"
        android:text="" />

    <TextView
        android:id="@+id/tv_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@+id/tv_played"
        android:layout_alignParentRight="true"
        android:text="" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_played"
        android:layout_marginRight="10dp"
        android:text="" />

</RelativeLayout>